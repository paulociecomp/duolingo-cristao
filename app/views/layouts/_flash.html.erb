<% flash.each do |type, message| %>
  <% color_class = case type.to_sym
                   when :notice, :success then "bg-green-50 border-green-200 text-green-800"
                   when :alert, :error then "bg-red-50 border-red-200 text-red-800"
                   when :warning then "bg-amber-50 border-amber-200 text-amber-800"
                   else "bg-blue-50 border-blue-200 text-blue-800"
                   end %>
  <div class="mb-4 p-4 rounded-lg border <%= color_class %>" data-controller="flash" data-flash-timeout-value="5000">
    <div class="flex items-center justify-between">
      <p class="text-sm font-medium"><%= message %></p>
      <button type="button" class="text-current opacity-50 hover:opacity-100" data-action="click->flash#dismiss">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>
