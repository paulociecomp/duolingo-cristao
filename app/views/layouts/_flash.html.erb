<% flash.each do |type, message| %>
  <% color_class = case type.to_sym
                   when :notice, :success then "bg-[#58CC02]/20 border-[#58CC02]/50 text-[#58CC02]"
                   when :alert, :error then "bg-[#FF4B4B]/20 border-[#FF4B4B]/50 text-[#FF4B4B]"
                   when :warning then "bg-[#FFC800]/20 border-[#FFC800]/50 text-[#FFC800]"
                   else "bg-[#1CB0F6]/20 border-[#1CB0F6]/50 text-[#1CB0F6]"
                   end %>
  <div class="mb-4 p-4 rounded-lg border <%= color_class %>" data-controller="flash" data-flash-timeout-value="5000">
    <div class="flex items-center justify-between">
      <p class="text-sm font-medium"><%= message %></p>
      <button type="button" class="text-current opacity-50 hover:opacity-100" data-action="click->flash#dismiss">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>
