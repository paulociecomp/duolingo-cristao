<div class="max-w-2xl mx-auto">
  <!-- Profile Header -->
  <div class="bg-[#1A2C32] rounded-2xl shadow-sm border border-[#37464F] p-6 mb-6">
    <div class="flex items-center gap-4 mb-6">
      <% if current_user.avatar_url.present? %>
        <img src="<%= current_user.avatar_url %>" alt="<%= current_user.name %>" class="w-20 h-20 rounded-full">
      <% else %>
        <div class="w-20 h-20 rounded-full bg-[#37464F] flex items-center justify-center">
          <span class="text-3xl font-bold text-[#58CC02]"><%= current_user.name[0].upcase %></span>
        </div>
      <% end %>

      <div>
        <h1 class="text-2xl font-bold text-white"><%= current_user.name %></h1>
        <p class="text-gray-400">Membro desde <%= current_user.created_at.strftime("%B %Y") %></p>
      </div>
    </div>

    <!-- Level Progress -->
    <div class="bg-gradient-to-r from-[#58CC02] to-[#1CB0F6] rounded-xl p-4 text-white">
      <div class="flex items-center justify-between mb-2">
        <span class="font-bold">N√≠vel <%= current_user.current_level %></span>
        <span class="text-sm opacity-80"><%= @level_service.xp_in_current_level %> / <%= @level_service.xp_for_level(current_user.current_level) %> XP</span>
      </div>
      <div class="w-full bg-white/30 rounded-full h-3">
        <div class="bg-white rounded-full h-3 transition-all" style="width: <%= @level_service.progress_percentage %>%"></div>
      </div>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-[#1A2C32] rounded-xl p-4 border border-[#37464F] text-center">
      <div class="text-2xl mb-1">‚≠ê</div>
      <div class="text-2xl font-bold text-white"><%= number_with_delimiter(current_user.total_xp) %></div>
      <div class="text-sm text-gray-400">XP Total</div>
    </div>

    <div class="bg-[#1A2C32] rounded-xl p-4 border border-[#37464F] text-center">
      <div class="text-2xl mb-1">üî•</div>
      <div class="text-2xl font-bold text-[#FF9600]"><%= current_user.current_streak %></div>
      <div class="text-sm text-gray-400">Streak Atual</div>
    </div>

    <div class="bg-[#1A2C32] rounded-xl p-4 border border-[#37464F] text-center">
      <div class="text-2xl mb-1">üìö</div>
      <div class="text-2xl font-bold text-white"><%= @stats[:total_lessons] %></div>
      <div class="text-sm text-gray-400">Li√ß√µes</div>
    </div>

    <div class="bg-[#1A2C32] rounded-xl p-4 border border-[#37464F] text-center">
      <div class="text-2xl mb-1">üíé</div>
      <div class="text-2xl font-bold text-[#1CB0F6]"><%= current_user.gems %></div>
      <div class="text-sm text-gray-400">Gems</div>
    </div>
  </div>

  <!-- Recent Badges -->
  <% if @recent_badges.any? %>
    <div class="bg-[#1A2C32] rounded-2xl shadow-sm border border-[#37464F] p-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-white">Conquistas Recentes</h2>
        <%= link_to achievements_path, class: "text-[#1CB0F6] text-sm hover:underline" do %>
          Ver todas
        <% end %>
      </div>

      <div class="flex gap-4 overflow-x-auto pb-2">
        <% @recent_badges.each do |badge| %>
          <div class="flex-shrink-0 text-center">
            <div class="w-16 h-16 rounded-full bg-[#FFC800]/20 flex items-center justify-center text-3xl mb-2">
              <%= badge.icon %>
            </div>
            <div class="text-xs font-medium text-gray-300 max-w-16 truncate"><%= badge.name %></div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Track Progress -->
  <% if @track_progresses.any? %>
    <div class="bg-[#1A2C32] rounded-2xl shadow-sm border border-[#37464F] p-6">
      <h2 class="text-lg font-bold text-white mb-4">Progresso nas Trilhas</h2>

      <div class="space-y-4">
        <% @track_progresses.each do |progress| %>
          <div class="flex items-center gap-4">
            <div class="text-2xl"><%= progress.track.icon %></div>
            <div class="flex-1">
              <div class="flex items-center justify-between mb-1">
                <span class="font-medium text-white"><%= progress.track.name %></span>
                <span class="text-sm text-gray-400"><%= progress.completion_percentage %>%</span>
              </div>
              <div class="w-full bg-[#37464F] rounded-full h-2">
                <div class="rounded-full h-2" style="width: <%= progress.completion_percentage %>%; background-color: <%= progress.track.color %>;"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
