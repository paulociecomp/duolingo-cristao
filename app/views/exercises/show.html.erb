<div class="min-h-screen flex flex-col" data-controller="exercise" data-exercise-type-value="<%= @exercise.exercise_type %>">
  <!-- Header -->
  <div class="px-4 py-3">
    <div class="max-w-3xl mx-auto flex items-center gap-4">
      <%= link_to lesson_path(@lesson), class: "text-gray-400 hover:text-gray-200 transition", data: { turbo_confirm: "Tem certeza que deseja sair? Seu progresso nesta lição será perdido." } do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      <% end %>

      <div class="flex-1">
        <div class="w-full bg-[#37464F] rounded-full h-3 overflow-hidden">
          <div class="bg-[#58CC02] h-3 rounded-full transition-all duration-500" style="width: <%= @progress %>%"></div>
        </div>
      </div>

      <div class="flex items-center gap-1">
        <span class="text-[#FF4B4B] text-xl">❤️</span>
        <span class="font-bold text-[#FF4B4B]"><%= current_user.lives %></span>
      </div>
    </div>
  </div>

  <!-- Exercise Content -->
  <div class="flex-1 flex flex-col items-center justify-center px-4">
    <div class="w-full max-w-2xl py-6">
      <%= render "exercises/types/#{@exercise.exercise_type}", exercise: @exercise %>
    </div>
  </div>

  <!-- Feedback Area -->
  <div id="exercise-feedback"></div>

  <!-- Action Bar -->
  <div class="border-t border-[#37464F]">
    <div class="max-w-3xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between gap-4">
        <button type="button"
                class="px-8 py-3 bg-transparent border-2 border-[#37464F] text-[#56696F] font-bold rounded-2xl transition uppercase tracking-wide hover:bg-[#232F36] disabled:opacity-50 cursor-pointer"
                data-exercise-target="skipButton"
                data-action="click->exercise#skip">
          Pular
        </button>
        <button type="button"
                class="px-12 py-3 bg-[#3C3C3C] text-[#6B6B6B] font-bold rounded-2xl transition uppercase tracking-wide disabled:cursor-not-allowed cursor-pointer exercise-submit-btn"
                data-exercise-target="submitButton"
                data-action="click->exercise#submit"
                disabled>
          Verificar
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .exercise-submit-btn:not(:disabled) {
    background-color: #58CC02;
    color: #fff;
  }
  .exercise-submit-btn:not(:disabled):hover {
    background-color: #4CAF00;
  }
</style>
