<div id="exercise-feedback" class="fixed bottom-0 left-0 right-0 z-50 animate-slide-up" data-next-url="<%= next_url %>">
  <% if correct %>
    <div class="bg-[#58CC02] p-6">
      <div class="max-w-3xl mx-auto">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span class="text-3xl">✅</span>
            <div>
              <span class="text-xl font-bold text-white">Correto!</span>
              <p class="text-white/90 text-sm"><%= feedback[:message] %></p>
            </div>
          </div>

          <button type="button"
                  class="px-12 py-3 bg-white text-[#58CC02] font-bold rounded-2xl hover:bg-gray-100 transition uppercase tracking-wide cursor-pointer"
                  data-action="click->exercise#continue">
            Continuar
          </button>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-[#FF4B4B] p-6">
      <div class="max-w-3xl mx-auto">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <span class="text-3xl">❌</span>
            <div>
              <span class="text-xl font-bold text-white">Resposta incorreta</span>
              <% if feedback[:correct_answer].present? %>
                <p class="text-white/80 text-sm">
                  Resposta correta: <span class="font-semibold"><%= feedback[:correct_answer].is_a?(Hash) ? feedback[:correct_answer]["value"] : feedback[:correct_answer] %></span>
                </p>
              <% end %>
            </div>
          </div>

          <button type="button"
                  class="px-12 py-3 bg-white text-[#FF4B4B] font-bold rounded-2xl hover:bg-gray-100 transition uppercase tracking-wide cursor-pointer"
                  data-action="click->exercise#continue">
            Continuar
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
