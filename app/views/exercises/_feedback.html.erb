<div id="exercise-feedback" class="fixed bottom-0 left-0 right-0 z-50 animate-slide-up" data-next-url="<%= next_url %>">
  <% if correct %>
    <div class="bg-[#58CC02] p-6">
      <div class="max-w-2xl mx-auto">
        <div class="flex items-center gap-3 mb-3">
          <span class="text-3xl">✅</span>
          <span class="text-xl font-bold text-white">Correto!</span>
        </div>
        <p class="text-white/90 mb-4"><%= feedback[:message] %></p>

        <button type="button"
                class="w-full bg-white text-[#58CC02] font-bold py-4 px-6 rounded-2xl hover:bg-gray-100 transition uppercase tracking-wide"
                data-action="click->exercise#continue">
          Continuar
        </button>
      </div>
    </div>
  <% else %>
    <div class="bg-[#FF4B4B] p-6">
      <div class="max-w-2xl mx-auto">
        <div class="flex items-center gap-3 mb-3">
          <span class="text-3xl">❌</span>
          <span class="text-xl font-bold text-white">Resposta incorreta</span>
        </div>

        <% if feedback[:correct_answer].present? %>
          <div class="mb-4">
            <p class="text-white/80 text-sm mb-1">Resposta correta:</p>
            <p class="text-white font-semibold">
              <%= feedback[:correct_answer].is_a?(Hash) ? feedback[:correct_answer]["value"] : feedback[:correct_answer] %>
            </p>
          </div>
        <% end %>

        <button type="button"
                class="w-full bg-white text-[#FF4B4B] font-bold py-4 px-6 rounded-2xl hover:bg-gray-100 transition uppercase tracking-wide"
                data-action="click->exercise#continue">
          Continuar
        </button>
      </div>
    </div>
  <% end %>
</div>
