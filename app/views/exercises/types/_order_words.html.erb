<div data-controller="order-words" data-order-words-lesson-id-value="<%= exercise.lesson_id %>" data-order-words-exercise-id-value="<%= exercise.id %>">
  <div class="mb-6">
    <h2 class="text-xl font-bold text-white mb-2">Organize as palavras</h2>
    <p class="text-gray-400 text-sm">Toque nas palavras para formar o vers√≠culo</p>

    <% if exercise.content["reference"].present? %>
      <div class="mt-3 inline-block bg-[#1A2C32] text-[#FFC800] px-3 py-1 rounded-full text-sm font-medium">
        <%= exercise.content["reference"] %>
      </div>
    <% end %>
  </div>

  <!-- Answer Area -->
  <div class="min-h-24 bg-[#1A2C32] rounded-2xl p-4 mb-6 border-2 border-dashed border-[#37464F]"
       data-order-words-target="answerArea">
    <div class="flex flex-wrap gap-2" data-order-words-target="selectedWords">
    </div>
    <p class="text-gray-500 text-sm text-center py-4" data-order-words-target="placeholder">
      Toque nas palavras abaixo
    </p>
  </div>

  <!-- Word Bank -->
  <div class="flex flex-wrap gap-2" data-order-words-target="wordBank">
    <% exercise.content["words"].shuffle.each do |word| %>
      <button type="button"
              class="px-4 py-2 bg-[#1A2C32] border-2 border-[#37464F] rounded-xl text-white hover:border-[#4A5D66] transition-all duration-200 font-medium"
              data-action="click->order-words#selectWord"
              data-order-words-target="word"
              data-word="<%= word %>">
        <%= word %>
      </button>
    <% end %>
  </div>

  <input type="hidden" name="answer" data-order-words-target="answer" data-exercise-target="answer">
</div>
